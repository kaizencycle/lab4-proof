# ---- Base image
FROM python:3.11-slim

# ---- System deps (optional but helpful for builds / SSL)
RUN apt-get update -y && apt-get install -y --no-install-recommends \
    build-essential curl ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# ---- Runtime settings
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# ---- Workdir
WORKDIR /app

# ---- Python deps
# (make sure there is a requirements.txt inside app/)
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# ---- App code
COPY . /app

# ---- Expose (Render maps this automatically)
EXPOSE 8000

# ---- Start server
# Use Render-provided $PORT if present, else 8000 (works locally too)

```
CMD ["bash","-lc","uvicorn main:app --host 0.0.0.0 --port ${PORT:-8000}"]  
