+"use client";
+import Link from "next/link";
+import { usePathname } from "next/navigation";
+import { useEffect, useState } from "react";
+
+const links = [
+  { href: "/", label: "Home", icon: "ðŸ " },
+  { href: "/onboarding", label: "Onboarding", icon: "ðŸ§­" },
+  { href: "/login", label: "Login", icon: "ðŸ”" },
