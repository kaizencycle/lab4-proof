```
# -------- BUILD STAGE ----------
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# If you use NEXT_PUBLIC_* envs, they should be available at build time
RUN npm run build

# -------- RUNTIME STAGE ----------
FROM node:18-alpine
WORKDIR /app

ENV NODE_ENV=production \
    PORT=3000 \
    NEXT_TELEMETRY_DISABLED=1

COPY --from=build /app/.next ./.next
COPY --from=build /app/public ./public
COPY --from=build /app/package*.json ./

RUN npm ci --omit=dev

EXPOSE 3000

# Healthcheck: Next.js responds on / by default
HEALTHCHECK --interval=30s --timeout=3s --retries=5 CMD wget -qO- http://127.0.0.1:3000/ > /dev/null || exit 1


```
CMD ["npm", "start", "--", "-p", "3000"]  
