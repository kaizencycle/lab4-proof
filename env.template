# Lab4-Proof Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Admin authentication token (required for admin endpoints)
ADMIN_TOKEN=your_admin_token_here

# Admin key for bonus operations
ADMIN_KEY=your_admin_key_here

# =============================================================================
# NODE METADATA
# =============================================================================

# Node identification
NODE_ID=cursor
AUTHOR=Cursor AI (Kaizen Node)
NETWORK_ID=Kaizen-DVA
VERSION=0.12.0

# =============================================================================
# GIC REWARDS SYSTEM
# =============================================================================

# Demo mode (set to true for testing)
DEMO_MODE=false

# GIC rewards per action
GIC_PER_PRIVATE=10
GIC_PER_PUBLISH=25
REWARD_MIN_LEN=200

# =============================================================================
# LEDGER CONFIGURATION
# =============================================================================

# Ledger storage path
LEDGER_PATH=data

# HMAC key for ledger integrity (generate a secure random string)
LEDGER_HMAC_KEY=your_hmac_key_here

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Render API (for deployment management)
RENDER_API_TOKEN=your_render_api_token_here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://reflections-app.onrender.com,https://lab4-proof.onrender.com,http://localhost:3000,http://localhost:5173

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit .env files to version control
# 2. Use strong, unique values for all tokens and keys
# 3. Rotate keys regularly
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service for production